/* 点击选择 */
.container {
  float: left;
  padding: 0;
  width: 100%;
  height: 100%;
}
.select{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  margin-bottom: 20rpx;
}
.option{
  font-size: 14px;
  color: #989898;
  width: 25%;
  margin-top: 20rpx;
  text-align: center;
  float: left;
}
.selected{
  font-size: 16px;
  color: #000;
}
.selected_line{
  background-color: #4783F6;
  height: 5rpx;
  border-radius: 2rpx;
  margin:0 auto;
  margin-top: 15rpx;
  width:50%;
}
